<h1>Dashboard</h1>
<%= form_for @shout do |form| %>
  <%= form.fields_for :content do |content_form| %>
    <%= content_form.text_area :body, placeholder: "shout here!", required: true %>
    <%= content_form.submit "Shout!" %>
  <% end %>
<% end %>

<br>
<%if @shouts.count > 0 %>
  <h1>Shouts</h1>
  <table>
    <thead>
      <tr>
        <th>Body</th>
        <th>User</th>
        <th>Created At</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @shouts.each do |shout| %>
        <tr>
          <td><%= shout.content.body %></td>
          <td><%= shout.username %></td>
          <td><%= time_ago_in_words(shout.created_at) %> ago</td>
          <td><%= link_to 'Show', shout %></td>
          <td><%= link_to 'Edit', edit_shout_path(shout) %></td>
          <td><%= link_to 'Destroy', shout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
